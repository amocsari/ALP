<Page x:Class="ALP.View.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:namespace="clr-namespace:ALP.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Page.Resources>
        <namespace:WelcomeScreenViewModel x:Key="viewModel"/>
    </Page.Resources>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="48">ÁDI Leltár Program</TextBlock>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="{Binding Source={StaticResource viewModel}, Path=ApplicationVersion}"/>

    </StackPanel>
</Page>
