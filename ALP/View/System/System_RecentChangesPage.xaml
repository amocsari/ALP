<Page x:Class="ALP.View.RecentChanges"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      DataContext="{Binding ChangesViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecentChanges">

    <StackPanel>
        <TextBlock Text="Változások" FontSize="32" HorizontalAlignment="Center"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5"/>
                <ColumnDefinition Width="0.5"/>
            </Grid.ColumnDefinitions>
            <ListView VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</Page>
